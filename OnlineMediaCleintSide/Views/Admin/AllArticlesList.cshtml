@* Views/Admins/AllArticlesList.cshtml *@
@model List<OnlineMediaCleintSide.Models.ArticleModel>

@{
    ViewData["Title"] = "All Articles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-text"></i> All Articles</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted text-center py-4">No articles found</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model)
                            {
                                <tr>
                                    <td>@article.Title</td>
                                    <td>@article.UserId</td>
                                    <td><span class="badge bg-info">@article.Category</span></td>
                                    <td>
                                        @if (article.IsApproved)
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>@article.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id"
                                           class="btn btn-sm btn-info" target="_blank">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
