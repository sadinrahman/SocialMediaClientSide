{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "BaseUrl": "https://localhost:5027/api/",
    "Timeout": 30,
    "RetryCount": 3
  },
  "SessionSettings": {
    "IdleTimeout": 30,
    "CookieName": "OnlineMediaSession",
    "HttpOnly": true,
    "Secure": false
  },
  "FileUploadSettings": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
    "UploadPath": "wwwroot/uploads/"
  },
  "SecuritySettings": {
    "PasswordMinLength": 6,
    "PasswordRequireDigit": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireNonAlphanumeric": false,
    "LockoutDefaultLockoutTimeSpan": 5,
    "LockoutMaxFailedAccessAttempts": 5
  },
  "ContentSettings": {
    "MaxArticleLength": 10000,
    "MaxTitleLength": 200,
    "MaxDescriptionLength": 1000,
    "AutoApproveArticles": false,
    "RequireImageForArticles": false
  }
}