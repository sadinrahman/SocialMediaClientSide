@model OnlineMediaCleintSide.Models.AdvertisementModel
@{
    ViewData["Title"] = "Edit Advertisement - Online Media";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Edit Advertisement</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="StaffId" type="hidden" />
                        <input asp-for="StaffName" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Advertisement Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a compelling title for your advertisement" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe your advertisement in detail..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Advertisement Image</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 200px;" alt="Current image">
                                    <p class="text-muted small">Current image</p>
                                </div>
                            }
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <div class="form-text">Upload a new image to replace the current one (optional)</div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Active Advertisement
                                </label>
                            </div>
                            <div class="form-text">Uncheck to temporarily disable this advertisement</div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Note:</strong> Changes to your advertisement will be visible immediately to users.
                        </div>

                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="@Url.Action("Details", "Advertisement", new { id = Model.Id })" class="btn btn-secondary me-2">
                                    <i class="fas fa-eye"></i> Preview
                                </a>
                                <a href="@Url.Action("Index", "Advertisement")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Advertisements
                                </a>
                            </div>
                            <div>
                                <button type="button" class="btn btn-outline-danger me-2" onclick="deleteAdvertisement()">
                                    <i class="fas fa-trash"></i> Delete Advertisement
                                </button>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Update Advertisement
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function deleteAdvertisement() {
            if (confirm('Are you sure you want to delete this advertisement? This action cannot be undone.')) {
                window.location.href = '@Url.Action("Delete", "Advertisement", new { id = Model.Id })';
            }
        }

        // Auto-save functionality
        let autoSaveTimer;
        document.querySelector('textarea[name="Description"]').addEventListener('input', function() {
            clearTimeout(autoSaveTimer);
            autoSaveTimer = setTimeout(function() {
                console.log('Auto-saving changes...');
            }, 30000); // Auto-save every 30 seconds
        });
    </script>
}

<style>
.card {
    border: none;
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
}

.btn {
    border-radius: 25px;
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}

.form-control {
    border-radius: 10px;
    border: 2px solid #e9ecef;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #ffc107;
    box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
}

textarea.form-control {
    resize: vertical;
    min-height: 120px;
}

.img-thumbnail {
    border-radius: 10px;
}
</style>