<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Media</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineMediaCleintSide.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-newspaper me-2"></i>Online Media
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="Index">
                                <i class="fas fa-newspaper me-1"></i>Articles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Advertisement" asp-action="Index">
                                <i class="fas fa-ad me-1"></i>Advertisements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>@Context.Session.GetString("FullName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">@Context.Session.GetString("UserRole")</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (Context.Session.GetString("UserRole") == "User")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Articles" asp-action="Create"><i class="fas fa-plus me-2"></i>Write Article</a></li>
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Edit"><i class="fas fa-user-edit me-2"></i>Edit Profile</a></li>
                                    }
                                    @if (Context.Session.GetString("UserRole") == "Staff")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Staff" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Advertisement" asp-action="Create"><i class="fas fa-plus me-2"></i>Create Ad</a></li>
                                        <li><a class="dropdown-item" asp-controller="Staff" asp-action="Details"><i class="fas fa-users me-2"></i>View Users</a></li>
                                    }
                                    @if (Context.Session.GetString("UserRole") == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ApproveUser"><i class="fas fa-user-check me-2"></i>Pending Users</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="StaffList"><i class="fas fa-users-cog me-2"></i>Staff Management</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Login" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light ms-2" asp-controller="Login" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-newspaper me-2"></i>Online Media</h5>
                    <p class="text-muted">Your platform for sharing thoughts, reading articles, and staying connected with the community.</p>
                </div>
                <div class="col-md-3">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-light text-decoration-none">Home</a></li>
                        <li><a href="@Url.Action("Index", "Articles")" class="text-light text-decoration-none">Articles</a></li>
                        <li><a href="@Url.Action("Index", "Advertisement")" class="text-light text-decoration-none">Advertisements</a></li>
                        <li><a href="@Url.Action("Privacy", "Home")" class="text-light text-decoration-none">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Contact</h6>
                    <p class="text-muted">
                        <i class="fas fa-envelope me-2"></i>contact@onlinemedia.com<br>
                        <i class="fas fa-phone me-2"></i>+1 (555) 123-4567
                    </p>
                </div>
            </div>
            <hr class="my-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 Online Media. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">Built with ASP.NET Core</small>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
